# git
autoload -Uz vcs_info
setopt prompt_subst
zstyle ':vcs_info:git:*' check-for-changes true
zstyle ':vcs_info:git:*' stagedstr "%F{magenta}!"
zstyle ':vcs_info:git:*' unstagedstr "%F{yellow}+"
zstyle ':vcs_info:*' formats "%F{cyan}%c%u(%b)%f "
zstyle ':vcs_info:*' actionformats '[%b|%a]'
precmd () { vcs_info }

# prompt customize
PROMPT='%B%F{blue}%n %F{green}%1~%f %F{cyan}$vcs_info_msg_0_%f%F{yellow}>>%f '

# Homebrew settings
export PATH="/opt/homebrew/bin:$PATH"

# Hacobu settings
export GOPATH="$HOME/hacobu_go"
export GO111MODULE=on
export GOPRIVATE=bitbucket.org/hacobu,github.com/hacobu-inc #go1.13ç”¨
export PATH=$GOPATH/bin:$PATH
export PATH=/usr/local/opt/mysql@8.0/bin/:$PATH

# pnpm
export PNPM_HOME="{{ .chezmoi.homeDir }}/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

# taskfile settings
# eval "$(task --completion zsh)"

# AWS Profile settins
export AWS_PROFILE=aws-saml-login
export AWS_REGION=us-east-1
export AWS_DEFAULT_REGION=us-east-1

# pyenv settings
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

